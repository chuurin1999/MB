<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/book_id_txt"
                android:layout_width="17dp"
                android:layout_height="16dp"
                app:layout_constraintStart_toEndOf="@+id/spinner1_title_txt"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/spinner2_title_txt"
                android:layout_width="79dp"
                android:layout_height="27dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="詳細狀態"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/note_title_txt"
                android:layout_width="145dp"
                android:layout_height="24dp"
                android:text="備註"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/caption_title_txt"
                app:layout_constraintStart_toStartOf="@+id/caption_title_txt"
                app:layout_constraintTop_toBottomOf="@+id/caption_title_txt" />

            <TextView
                android:id="@+id/caption_title_txt"
                android:layout_width="145dp"
                android:layout_height="23dp"
                android:layout_marginStart="24dp"
                android:text="摘要"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/spinner2_title_txt"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/date_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/note_title_txt" />

            <TextView
                android:id="@+id/spinner1_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                app:layout_constraintStart_toEndOf="@+id/caption_title_txt"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="49dp"
                android:layout_height="38dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/hand" />

            <TextView
                android:id="@+id/money_title_txt"
                android:layout_width="76dp"
                android:layout_height="42dp"
                android:layout_marginStart="20dp"
                android:text="金額"
                android:textColor="#7C8AD3"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="@+id/spinner2_title_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/note_title_txt"
                app:layout_constraintTop_toTopOf="@+id/spinner2_title_txt" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>